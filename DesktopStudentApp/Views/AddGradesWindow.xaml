<Window x:Class="DesktopStudentApp.AddGradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopStudentApp"
        mc:Ignorable="d"
        Title="AddGradesWindow" Height="230" Width="366">
    <Grid>
        <TextBox Name="TxtEntId" HorizontalAlignment="Left" Margin="55,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="55,65,0,0" TextWrapping="Wrap" Text="Enter ID" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="55,107,0,0" TextWrapping="Wrap" Text="Add new grade." VerticalAlignment="Top" Width="94"/>
        <TextBox Name="TxtAddGrade" HorizontalAlignment="Left" Margin="55,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SaveGrade" Click="SaveGrade_btn" Content="Save" HorizontalAlignment="Left" Margin="180,123,0,0" VerticalAlignment="Top" Height="18" Width="45"/>

    </Grid>
</Window>
